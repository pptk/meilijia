<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
     xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout 
        android:id="@+id/content_relative_title" 
        android:background="@drawable/app_red_bg" 
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">
     <ImageView android:paddingLeft="10.0dip"
           android:paddingRight="10.0dip" 
           android:id="@+id/back"
           android:clickable="true" 
           android:layout_width="wrap_content" 
           android:layout_height="fill_parent" 
           android:src="@drawable/title_btn_back" 
           android:scaleType="centerInside" 
           android:layout_alignParentLeft="true" 
           android:contentDescription="@null" />
      <TextView android:textSize="18.0sp" 
            android:textColor="#ffffff" 
            android:gravity="center" 
            android:id="@+id/topic_title_tv" 
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent" 
            android:text="测试记录" 
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    
    <ListView
        android:id="@+id/lv"
        android:layout_height="match_parent"
        android:layout_width="match_parent"    
        android:layout_marginTop="5.0dip" 
        />
</LinearLayout>
