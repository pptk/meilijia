<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_lly"
    android:background="#fff3f1f2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

 <RelativeLayout
    android:id="@+id/about_title_rly" 
    android:background="@drawable/title_bg" 
    android:layout_width="fill_parent" 
    android:layout_height="50.0dip">
    
   <TextView 
       android:textSize="18.0sp"
       android:textColor="@color/white"
       android:gravity="center" 
       android:layout_width="wrap_content"
       android:layout_height="fill_parent"
       android:text="系统设置" 
       android:layout_centerHorizontal="true" /> 
    </RelativeLayout>

 <LinearLayout
      android:orientation="vertical"
       android:layout_width="fill_parent" 
       android:layout_height="fill_parent" 
       android:layout_below="@+id/about_title_rly" >

     <RelativeLayout
       android:gravity="center_vertical"
       android:orientation="horizontal"
       android:tag="3" 
       android:background="@drawable/personal_item_bg" 
       android:padding="20.0dip" 
       android:clickable="true" 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:onClick="OnSelectListener">
       <TextView 
        android:textSize="@dimen/personal_info_font"
        android:textColor="@color/personal_item_font_title"
        android:duplicateParentState="true" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="美加帮助" 
        android:layout_centerVertical="true" />
     <TextView
         android:ellipsize="middle"
         android:id="@+id/about_right_tv1"
         android:duplicateParentState="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginRight="5.0dip"
         android:drawableRight="@drawable/personal_item_rightarrow"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true" />
      <ImageView
         android:background="@drawable/dot_pressed" 
         android:visibility="gone"
         android:duplicateParentState="true"
         android:layout_width="15.0dip"
         android:layout_height="15.0dip"
         android:layout_marginRight="5.0dip"
         android:layout_toLeftOf="@+id/about_right_tv1"
         android:layout_centerVertical="true" 
         android:contentDescription="@null" />
     </RelativeLayout>
        <View
          android:background="@color/divide_line_color" 
          android:layout_width="fill_parent" 
          android:layout_height="1.0px" />
       <View
           android:background="@color/divide_line_color"
           android:layout_width="fill_parent" 
           android:layout_height="1.0px" 
           android:layout_marginTop="10.0dip" />

       <RelativeLayout
           android:gravity="center_vertical" 
           android:orientation="horizontal" 
           android:tag="0" 
           android:background="@drawable/personal_item_bg"
           android:padding="20.0dip" 
           android:clickable="true" 
           android:layout_width="fill_parent" 
           android:layout_height="wrap_content" 
           android:onClick="OnSelectListener">
         <TextView
           android:textSize="@dimen/personal_info_font"
           android:textColor="@color/personal_item_font_title" 
           android:duplicateParentState="true" 
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content"
           android:text="版本更新" 
           android:layout_centerVertical="true" />
    <TextView 
           android:ellipsize="middle" 
           android:id="@+id/about_right_tv" 
           android:duplicateParentState="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" 
           android:layout_marginRight="5.0dip"
           android:drawableRight="@drawable/personal_item_rightarrow" 
           android:layout_alignParentRight="true" 
           android:layout_centerVertical="true" />
    <ImageView 
           android:id="@+id/about_update_iv"
           android:background="@drawable/dot_pressed"
           android:visibility="gone" 
           android:duplicateParentState="true" 
           android:layout_width="15.0dip"
           android:layout_height="15.0dip" 
           android:layout_marginRight="5.0dip" 
           android:layout_toLeftOf="@+id/about_right_tv"
           android:layout_centerVertical="true"
           android:contentDescription="@null" />
    <TextView 
           android:id="@+id/about_update_tv" 
           android:duplicateParentState="true" 
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
           android:layout_marginRight="5.0dip" 
           android:text="已经是最新版本" 
           android:layout_toLeftOf="@+id/about_update_iv"
           android:layout_centerVertical="true" />
       </RelativeLayout>
     

      <RelativeLayout
           android:gravity="center_vertical"
           android:orientation="horizontal"
           android:tag="4"
           android:background="@drawable/personal_item_bg"
           android:padding="20.0dip"
           android:clickable="true"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content" 
           android:onClick="OnSelectListener">
       <TextView 
           android:textSize="@dimen/personal_info_font" 
           android:textColor="@color/personal_item_font_title"
           android:duplicateParentState="true" 
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
           android:text="分享好友" 
           android:layout_centerVertical="true" />
       <TextView 
           android:ellipsize="middle" 
           android:id="@+id/personal_info_fz" 
           android:duplicateParentState="true" 
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content"
           android:layout_marginRight="5.0dip"
           android:drawableRight="@drawable/personal_item_rightarrow"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true" />
      </RelativeLayout>
    

    <RelativeLayout
          android:gravity="center_vertical"
           android:orientation="horizontal"
           android:tag="1" 
           android:background="@drawable/personal_item_bg" 
           android:padding="20.0dip"
           android:clickable="true" 
           android:layout_width="fill_parent" 
           android:layout_height="wrap_content" 
           android:onClick="OnSelectListener">
    <TextView 
           android:textSize="@dimen/personal_info_font"
           android:textColor="@color/personal_item_font_title"
           android:duplicateParentState="true" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="吐槽美加"
           android:layout_centerVertical="true" />
      <TextView 
           android:ellipsize="middle" 
           android:id="@+id/personal_info_fz"
           android:duplicateParentState="true" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" 
           android:layout_marginRight="5.0dip" 
           android:drawableRight="@drawable/personal_item_rightarrow" 
           android:layout_alignParentRight="true" 
           android:layout_centerVertical="true" />
    </RelativeLayout>
     
        <View 
            android:background="@color/divide_line_color" 
            android:layout_width="fill_parent" 
            android:layout_height="1.0px"
            android:layout_marginTop="10.0dip" />

        <RelativeLayout
            android:gravity="center_vertical" 
            android:orientation="horizontal"
            android:tag="2" 
            android:id="@+id/guanyumeijia"
            android:background="@drawable/personal_item_bg" 
            android:padding="20.0dip" 
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="OnSelectListener">
      <TextView 
            android:textSize="@dimen/personal_info_font"
            android:textColor="@color/personal_item_font_title"
            android:duplicateParentState="true"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="关于美加"
            android:layout_centerVertical="true" />
       <TextView 
            android:ellipsize="middle" 
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginRight="5.0dip" 
            android:drawableRight="@drawable/personal_item_rightarrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
        </RelativeLayout>
     
        <View 
            android:background="@color/divide_line_color"
            android:layout_width="fill_parent" 
            android:layout_height="1.0px" 
            android:layout_marginTop="10.0dip" />
         <Button 
            android:textSize="@dimen/personal_info_font"
            android:textColor="@color/black_light"
            android:layout_gravity="center_horizontal" 
            android:id="@+id/account_info_info_out_btn" 
            android:tag="8" 
            android:background="@drawable/personal_item_bg" 
            android:padding="20.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:text="退出登入"
            android:onClick="onOutListener" />
         <View 
            android:background="@color/divide_line_color" 
            android:layout_width="fill_parent" 
            android:layout_height="1.0px" />
 </LinearLayout>

</RelativeLayout>