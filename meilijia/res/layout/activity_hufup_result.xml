<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_marginTop="25dip"
        android:id="@+id/content_relative_title"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:orientation="horizontal"
        android:background="@drawable/app_red_bg" >

        <ImageView
            android:id="@+id/imagevie"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:contentDescription="@null"
            android:onClick="onLeftClickListener"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/title_btn_back" />

        <TextView
            android:id="@+id/topic_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="测试对比"
            android:textColor="#ffffff"
            android:textSize="18.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="40dip"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试护肤品基本信息"
                    android:textColor="#555555"
                    android:textSize="18dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="部位:"
                    android:textColor="#888888"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/position_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:text="脸部"
                    android:textColor="#888888"
                    android:textSize="16dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称:"
                    android:textColor="#888888"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/brand_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:text="小灰灰牌花露水"
                    android:textColor="#888888"
                    android:textSize="16dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="功效:"
                    android:textColor="#888888"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/dowhat_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:text="补水"
                    android:textColor="#888888"
                    android:textSize="16dip" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试护肤前后对比"
                    android:textColor="#555555"
                    android:textSize="18dip" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="250dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/quanquan1"
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/test"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/test_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="水分"
                        android:textColor="#39cdff"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00.00%"
                        android:textColor="#39cdff"
                        android:textSize="12dip" />
                </LinearLayout>

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/quanquan1"
                    android:layout_marginTop="5dip"
                    android:gravity="center"
                    android:text="护肤前" />

                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/quanquan2"
                    android:layout_marginTop="5dip"
                    android:gravity="center"
                    android:text="护肤后" />

                <LinearLayout
                    android:id="@+id/quanquan2"
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/test"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/test_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="水分"
                        android:textColor="#39cdff"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00.00%"
                        android:textColor="#39cdff"
                        android:textSize="12dip" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/opinion"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="根据数据对比分析，为你的肌肤增加了80%水分" />
    </LinearLayout>

</LinearLayout>